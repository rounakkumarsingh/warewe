{
	"name": "backend",
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"migrate:create": "NODE_OPTIONS='--no-warnings --loader ts-node/esm' bunx mikro-orm migration:create --config=./src/db/mikro-orm.config.ts",
		"migrate:up": "NODE_OPTIONS='--no-warnings --loader ts-node/esm' bunx mikro-orm migration:up --config=./src/db/mikro-orm.config.ts",
		"migrate:down": "NODE_OPTIONS='--no-warnings --loader ts-node/esm' bunx mikro-orm migration:down --config=./src/db/mikro-orm.config.ts",
		"schema:create": "NODE_OPTIONS='--no-warnings --loader ts-node/esm' bunx mikro-orm schema:create --config=./src/db/mikro-orm.config.ts",
		"schema:update": "NODE_OPTIONS='--no-warnings --loader ts-node/esm' bunx mikro-orm schema:update --config=./src/db/mikro-orm.config.ts",
		"schema:drop": "NODE_OPTIONS='--no-warnings --loader ts-node/esm' bunx mikro-orm schema:drop --config=./src/db/mikro-orm.config.ts"
	},
	"dependencies": {
		"@hono/zod-validator": "^0.7.2",
		"@mikro-orm/core": "^6.5.1",
		"@mikro-orm/migrations": "^6.5.1",
		"@mikro-orm/postgresql": "^6.5.1",
		"@mikro-orm/reflection": "^6.5.1",
		"hono": "^4.9.5",
		"zod": "^4.1.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@mikro-orm/cli": "^6.5.1",
		"@types/bun": "^1.2.21",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2"
	}
}
